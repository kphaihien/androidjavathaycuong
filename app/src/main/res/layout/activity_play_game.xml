<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playgame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".PlayGame">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/back_back"
            android:id="@+id/back"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/speaker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/loudspeaker_on"
            android:layout_toEndOf="@id/back"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/speaker"
            android:id="@+id/point"
            android:text="Points:0"
            android:textSize="20dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/questions_background"
            android:layout_marginLeft="160dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/txt_question"
            android:layout_width="wrap_content"
            android:text="Question:"
            android:background="@drawable/questions_background"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            />


        <TextView
            android:id="@+id/txt_contentquestion"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/questions_background"
            android:text="How many girl friend did you have in whole live?"
            android:gravity="center"
            android:textSize="25dp"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/txt_question"
        />
    </RelativeLayout>

    <ImageView
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/nerd" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/txtAnswer1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Key1"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:textSize="15dp"
                android:padding="20dp"
                android:layout_marginEnd="8dp" />
            <TextView
                android:gravity="center"
                android:id="@+id/txtAnswer2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Key2"
                android:padding="20dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:textSize="15dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:gravity="center"
                android:id="@+id/txtAnswer3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Key3"
                android:padding="20dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:textSize="15dp"
                android:layout_marginEnd="8dp" />
            <TextView
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Key4"
                android:padding="20dp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_background"
                android:textSize="15sp"
                android:layout_marginStart="8dp"
                android:id="@+id/txtAnswer4"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
