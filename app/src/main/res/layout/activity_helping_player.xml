<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_back"
            android:layout_marginLeft="10dp"
            android:id="@+id/back_main" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Hướng dẫn chơi game"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:textColor="#f1c63f"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/helps_background"
        android:text="Chào mừng các bạn đã đến với game ĐỐ VUI HẠI NÃO, luật chơi là các bạn sẽ phải chọn đáp án đúng mỗi câu hỏi, mỗi câu hỏi sẽ được tính 10 điểm. Kết quả của các bạn sẽ được lưu trong BẢNG PHONG THẦN. Chúc các bạn may mắn !!!"
        android:textSize="27dp"
        android:textColor="@color/white"
        android:padding="25dp"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="DevByHien"
        android:layout_gravity="center"
        android:background="@drawable/questions_background"
        android:padding="10dp"/>

</LinearLayout>

