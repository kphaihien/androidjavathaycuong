<!-- res/drawable/custom_button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bo tròn các góc -->
    <corners android:radius="16dp" />

    <!-- Màu nền cho Button -->
    <solid android:color="#ad02f7" />

    <!-- Viền cho Button -->
    <stroke
        android:width="2dp"
        android:color="#FF3700B3" />

    <!-- Hiệu ứng đổ bóng hoặc tạo khoảng trống -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="10dp"
        android:bottom="10dp" />
</shape>
